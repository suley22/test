<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.main_activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ListView
            android:id="@+id/main_expenseList"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_alignParentBottom="true"
            android:background="#bdbdbd"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="16dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_btn_add_item_expense_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_expenseList"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/main_btnConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/main_btn_add_item_expense_list"
            android:drawableRight="@android:color/background_dark"
            android:text="@string/main_btnconfig"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/main_txt_view_income"
            android:layout_width="230dp"
            android:layout_height="44dp"
            android:hint="@string/hint_main_txt_view_income"
            app:layout_constraintEnd_toStartOf="@+id/main_btnConfig"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="13dp"
            android:textColor="@color/colorBlueGreenLigth"
            android:textColorHint="@color/colorBlueGreenLigth"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

